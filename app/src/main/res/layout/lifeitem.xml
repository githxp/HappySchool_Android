<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rvItemHeight_study"
    android:padding="10dp">


    <ImageView
        android:id="@+id/imgicon_lifeitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_studyrv_classunion" />

    <TextView
        android:id="@+id/tvtitle_lifeitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imgicon_lifeitem"
        android:textSize="@dimen/rvtext_study" />
</RelativeLayout>