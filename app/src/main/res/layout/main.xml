<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleLayoutHeight_xhdpi"
        android:background="@color/primaryBlue"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_person_main"
            android:layout_width="@dimen/titleImg_xhdpi"
            android:layout_height="@dimen/titleImg_xhdpi"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/alpha0"
            android:src="@drawable/ic_menu_setting" />

        <TextView
            android:id="@+id/tvTitle_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/title"
            android:textSize="@dimen/titleText_xhdpi" />

        <ImageButton
            android:id="@+id/imgbtn_setting_main"
            android:layout_width="@dimen/titleImg_xhdpi"
            android:layout_height="@dimen/titleImg_xhdpi"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/alpha0"
            android:src="@drawable/ic_menu_person" />

    </RelativeLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </fragment>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imgbtn_study_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/alpha0"
                    android:src="@drawable/ic_buttombar_study_pressed" />

                <TextView
                    android:id="@+id/tvStudy_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgbtn_study_main"
                    android:layout_centerHorizontal="true"
                    android:text="@string/studyMainButtomBar"
                    android:textColor="@color/primaryGrey"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imgbtn_life_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/alpha0"
                    android:src="@drawable/ic_buttombar_life_unpressed" />

                <TextView
                    android:id="@+id/tvLife_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgbtn_life_main"
                    android:layout_centerHorizontal="true"
                    android:text="@string/lifeMainButtomBar"
                    android:textColor="@color/primaryGrey"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imgbtn_entertainment_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/alpha0"
                    android:src="@drawable/ic_buttombar_entertainment_unpressed" />

                <TextView
                    android:id="@+id/tvEntertainment_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgbtn_entertainment_main"
                    android:layout_centerHorizontal="true"
                    android:text="@string/entertainmentMainButtomBar"
                    android:textColor="@color/primaryGrey"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>