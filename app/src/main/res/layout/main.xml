<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleLayoutHeight_xhdpi"
        android:background="@color/primaryBlue"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_person_main"
            android:layout_width="@dimen/titleImg_xhdpi"
            android:layout_height="@dimen/titleImg_xhdpi"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/alpha0"
            android:src="@drawable/ic_menu_setting" />

        <TextView
            android:id="@+id/tvTitle_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/title"
            android:textSize="@dimen/titleText_xhdpi" />

        <ImageButton
            android:id="@+id/imgbtn_setting_main"
            android:layout_width="@dimen/titleImg_xhdpi"
            android:layout_height="@dimen/titleImg_xhdpi"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/alpha0"
            android:src="@drawable/ic_menu_person" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabLayoutHeight_xhdpi"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/taboutModule_main"
            android:layout_width="0dp"
            android:layout_height="@dimen/tabLayoutHeight_xhdpi"
            android:layout_weight="1"
            android:background="@color/backgroundGrey"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/primaryGreen"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/primaryGreen"
            app:tabTextAppearance="@style/taboutStyles"
            app:tabTextColor="@color/taboutText" />

        <ImageButton
            android:id="@+id/imgbtn_more_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/alpha0"
            android:src="@drawable/ic_tab_more" />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vpFragment_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

</LinearLayout>