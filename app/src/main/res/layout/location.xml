<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleLayoutHeight_xhdpi"
        android:background="@color/primaryBlue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/title"
            android:textSize="@dimen/titleText_xhdpi" />

        <ImageButton
            android:id="@+id/imgbtn_goback_location"
            android:layout_width="@dimen/titleImg_xhdpi"
            android:layout_height="@dimen/titleImg_xhdpi"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/alpha0"
            android:src="@drawable/ic_menu_goback" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout_fragmentContent_location"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp">

        <LinearLayout
            android:id="@+id/linearlayout_wifiTab_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_wifiTab_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_buttombar_wifi_location_unpressed" />

                <TextView
                    android:id="@+id/tv_wifiTab_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_wifiTab_location"
                    android:layout_centerHorizontal="true"
                    android:text="@string/wifiLocationButtomBar"
                    android:textColor="@color/primaryGrey"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_bluetoothTab_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_bluetoothTab_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_buttombar_bluetooth_location_unpressed" />

                <TextView
                    android:id="@+id/tv_bluetoothTab_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_bluetoothTab_location"
                    android:layout_centerHorizontal="true"
                    android:text="@string/bluetoothLocationButtomBar"
                    android:textColor="@color/primaryGrey"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_pictureTab_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_pictureTab_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_buttombar_picture_location_unpressed" />

                <TextView
                    android:id="@+id/tv_pictureTab_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_pictureTab_location"
                    android:layout_centerHorizontal="true"
                    android:text="@string/pictureLocationButtomBar"
                    android:textColor="@color/primaryGrey"
                    android:textSize="10sp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_chartTab_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_chartTab_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_buttombar_chart_location_unpressed" />

                <TextView
                    android:id="@+id/tv_chartTab_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_chartTab_location"
                    android:layout_centerHorizontal="true"
                    android:text="@string/chartLocationButtomBar"
                    android:textColor="@color/primaryGrey"
                    android:textSize="10sp" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>