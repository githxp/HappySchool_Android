<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">


    <RelativeLayout
        android:id="@+id/layoutWifiFail_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnOpenWifi_location"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_location_wififail" />

        <Button
            android:id="@+id/btnOpenWifi_location"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/primaryGreen"
            android:text="@string/openWifi_location"
            android:textColor="@color/second" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layoutWifiLoading_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvWifiLoading_location"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_location_wifiloading" />

        <TextView
            android:id="@+id/tvWifiLoading_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/loadWifi_location"
            android:textColor="@color/taboutText"
            android:textSize="@dimen/address_wifitem_leader_xhdpi" />
    </RelativeLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvWifi_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabWifi_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@color/alpha0"
        android:src="@drawable/ic_location_bluetooth"
        app:elevation="10sp"
        app:layout_anchor="@id/rvWifi_location"
        app:layout_anchorGravity="bottom|left"
        app:pressedTranslationZ="12sp"
        app:rippleColor="@color/primaryBlue" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPicture_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/alpha0"
        android:src="@drawable/ic_location_picture"
        app:elevation="10sp"
        app:layout_anchor="@id/rvWifi_location"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:pressedTranslationZ="12sp"
        app:rippleColor="@color/primaryBlue" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabChart_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@color/alpha0"
        android:src="@drawable/ic_location_map"
        app:elevation="10sp"
        app:layout_anchor="@id/rvWifi_location"
        app:layout_anchorGravity="bottom|right"
        app:pressedTranslationZ="12sp"
        app:rippleColor="@color/primaryBlue" />


</android.support.design.widget.CoordinatorLayout>